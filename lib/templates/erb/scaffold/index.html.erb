<section>
  <div class="page-header">
    <h1><%= plural_table_name.titlecase %> <small>Lista de <%= plural_table_name %></small></h1>
  </div>

  <div class="well">
    <%%= link_to icon_tag('Agregar', :class => 'icon-plus-sign icon-white'), new_<%= singular_table_name %>_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <%% if @<%= plural_table_name %>.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
      <% attributes.each do |attribute| -%>
        <th><%= attribute.human_name %></th>
      <% end -%>        
        <th></th>
      </tr>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <% attributes.each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td>
            
            <div class="btn-group">              
              <%%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></li>
                <li><%%= link_to icon_tag('Eliminar', :class => 'icon-trash'), <%= singular_table_name %>, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <%% end %>
    </table> 
  <%% else %>
    <p class="alert-message warning">
      Todavía no hay <%= plural_table_name %>, <%%= link_to 'agregar', new_<%= singular_table_name %>_path %>.
    </p>
  <%% end %>

</section>
