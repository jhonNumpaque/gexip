<div class="well">
  <%= link_to icon_tag('Agregar', :class => 'icon-plus-sign icon-white'), agregar_tarea_path(:id => params[:id]), :remote=>true, :class => 'btn btn-primary' %>
</div>
<section>
  <% if @tareas.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
	<th>Orden</th>
	<th>Nombre</th>
	<th>Metodo</th>
	<th>Tiempo ejecucion</th>
	<th>Tipo</th>
	<th>Cargo</th>
	<th>Tarea sgt</th>
	<th>Tarea alt</th>

	<th></th>
      </tr>
      <% @tareas.each do |tarea| %>
	<tr>
	  <td><%= tarea.orden %></td>
	  <td><%= tarea.nombre %></td>
	  <td><%= tarea.metodo %></td>
	  <td><%= tarea.tiempo_ejecucion %> <%= tarea.unidad_tiempo_id %></td>
	  <td><%= tarea.tipo %></td>
	  <td><%= tarea.cargo.nombre %></td>
	  <td><%= tarea.tarea_sgt_id %></td>
	  <td><%= tarea.tarea_alt_id %></td>
	  <td>

	    <div class="btn-group">              
	      <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
	      <ul id="menu1" class="dropdown-menu">
		<li><%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_tarea_path(:id => tarea.id), :remote => true %></li>
		<li><%= link_to icon_tag('Eliminar', :class => 'icon-trash'), tarea, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete, :remote => true %></li>

	      </ul>              
	    </div>
	  </td>
	</tr>
      <% end %>
    </table> 
  <% else %>
    <p class="alert-message warning">
      Todavía no hay tareas, <%= link_to 'agregar', new_tarea_path %>.
    </p>
  <% end %>

</section>