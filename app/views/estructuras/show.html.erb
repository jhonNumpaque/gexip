    <h1>Estructura</h1>
  </div>

  <div class="well">
    <div class="btn-group">
      <%= link_to icon_tag('Editar', :class => 'icon-edit icon-white'), edit_estructura_path(@estructura), :class => 'btn btn-primary' %>
      <%= link_to icon_tag('Borrar', :class => 'icon-trash icon-white'), @estructura, confirm: 'EstÃ¡s seguro?', method: :delete, class: 'btn btn-primary' %>
