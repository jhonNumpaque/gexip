<section>
  <div class="page-header">
    <h1>Estructuras <small>Disponibles</small></h1>
  </div>

  <%= form_tag controller_name, :class => "well form-inline", :method => :get do %>

    <%= link_to icon_tag('Agregar', :class => 'icon-plus-sign icon-white'), new_estructura_path, :class => 'btn btn-primary' %>
    <%= link_to icon_tag('Todos', :class => 'icon-eye-open icon-white'), estructuras_path, :class => 'btn btn-primary' %>
    <i class="icon-th-large"></i>
    <%= label_tag 'Buscar:' %>
    <%= text_field_tag 'valor', params[:valor], :style => "width:120px;" %>
    <%= label_tag 'Tipo' %>
    <%= select_tag :tipo_busqueda, options_for_select(OrganismoInterno::TIPO_BUSQUEDA.map{|c| [c,c]},params[:tipo_busqueda]) %>
    <%= submit_tag 'Buscar',  :class => 'btn btn-primary'%>
    <hr />

    <%= select_tag :filtro_ciudad, options_from_collection_for_select(Ciudad.all, "id", "nombre", params[:filtro_ciudad]), :prompt => '-- Seleccione --' %>
    <%= submit_tag 'Fitrar',  :class => 'btn btn-primary'%>
  <% end %>

</form>

<br />

<% if @estructuras.present? %>
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Nombre</th>
      <th>Pertenece</th>
      <th>&nbsp;</th>
    </tr>
    <% @estructuras.each do |estructura| %>
      <tr>
        <td><%= link_to estructura.nombre, estructura  %></td>
        <td><%#= estructura.estructura_id.nombre %></td>
        <td>

          <div class="btn-group">              
            <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
            <ul id="menu1" class="dropdown-menu">
              <li><%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_estructura_path(estructura) %></li>
              <li><%= link_to icon_tag('Eliminar', :class => 'icon-trash'), estructura, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

            </ul>              
          </div>
        </td>
      </tr>
    <% end %>
  </table> 
<%= paginate @estructuras %>

<% else %>
  <p class="alert-message warning">
    Todavía no hay estructuras, <%= link_to 'agregar', new_estructura_path %>.
  </p>
<% end %>

</section>
