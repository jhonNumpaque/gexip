<section>
  <div class="page-header">
    <h1>Unidades de Tiempos <small>Lista de unidades de tiempos</small></h1>
  </div>

  <div class="well">
    <%= menu_link_to(icon_tag('Agregar', :class => 'icon-plus-sign icon-white'),:unidades_tiempos, action: :new,
                     link_options: { class: 'btn btn-primary' }) %>
  </div>
  <br />

  <% if @unidades_tiempos.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>Nombre</th>
        <th>Simbolo</th>
        <th>Total Minutos</th>

        <th></th>
      </tr>
      <% @unidades_tiempos.each do |unidad_tiempo| %>
        <tr>
          <td><%= unidad_tiempo.nombre %></td>
          <td><%= unidad_tiempo.simbolo %></td>
          <td><%= unidad_tiempo.minutos %></td>
          <td>

            <div class="btn-group">              
              <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_unidad_tiempo_path(unidad_tiempo) %></li>
                <li><%= link_to icon_tag('Eliminar', :class => 'icon-trash'), unidad_tiempo, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <% end %>
    </table>
  <%= paginate @unidades_tiempos %>
  <% else %>
    <p class="alert-message warning">
      Todavía no hay unidades de tiempos, <%= link_to 'agregar', new_unidad_tiempo_path %>.
    </p>
  <% end %>

</section>
