<section>
  <div class="page-header">
    <h1>Permisos <small>Lista de permisos</small></h1>
  </div>

  <div class="well">
    <%= link_to 'Agregar', new_permiso_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <% if @permisos.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
              <th>Descripcion</th>
              
        <th></th>
      </tr>
      <% @permisos.each do |permiso| %>
        <tr>
                      <td><%= permiso.descripcion %></td>
                    <td>
            
            <div class="btn-group">              
              <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%= link_to content_tag(:i, '', :class => 'icon-pencil') + 'Editar', edit_permiso_path(permiso) %></li>
                <li><%= link_to content_tag(:i, '', :class => 'icon-trash') + 'Eliminar', permiso, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <% end %>
    </table> 
  <% else %>
    <p class="alert-message warning">
      Todavía no hay permisos, <%= link_to 'agregar', new_permiso_path %>.
    </p>
  <% end %>

</section>
