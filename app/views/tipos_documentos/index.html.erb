<section>
  <div class="page-header">
    <h1>Tipos Documentos <small>Lista de tipos_documentos</small></h1>
  </div>

  <div class="well">
    <%= link_to 'Agregar', new_tipo_documento_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <% if @tipos_documentos.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
              <th>Nombre</th>
              <th>Formato</th>
              
        <th></th>
      </tr>
      <% @tipos_documentos.each do |tipo_documento| %>
        <tr>
                      <td><%= tipo_documento.nombre %></td>
                      <td><%= tipo_documento.formato %></td>
                    <td>
            
            <div class="btn-group">              
              <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_tipo_documento_path(tipo_documento) %></li>
                <li><%= link_to icon_tag('Eliminar', :class => 'icon-trash'), tipo_documento, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <% end %>
    </table> 
  <% else %>
    <p class="alert-message warning">
      Todavía no hay tipos_documentos, <%= link_to 'agregar', new_tipo_documento_path %>.
    </p>
  <% end %>

</section>
