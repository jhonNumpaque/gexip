<section>
	<div class="well">
		<%= link_to icon_tag('Volver', :class => 'icon-arrow-left icon-white'), show_macroproceso_path(params[:macroproceso_id]), :class => 'btn btn-primary' %>
		<%= simple_form_for controller_name, :url => show_procesos_path, :method => :get do |f| %>
		<div class="control-group">
			<label class="optional">Ver Por</label>
			<div class="controls">
				<%= select_tag 'filtro_vista', options_for_select({'A침o' => 'anho','Mes' => 'mes', 'Semestre' => 'semestre', 'Cuatrimestre' => 'cuatrimestre', 'Trimestre'=>'trimestre'}), prompt: "-- Seleccionar --" %>
				<%= hidden_field_tag 'macroproceso_id', params[:macroproceso_id] %>
				<%= hidden_field_tag 'anho', params[:anho] %>
				<%= submit_tag 'Filtrar', :class => 'btn btn-success' %>
			</div>
		</div>
		<% end %>

		<%= link_to icon_tag('', :class => 'chart'), '#', :class => 'btn', :onclick => 'showGraph()', :title => 'Graficar' %>
		<%= button_tag icon_tag('', :class => 'icon-print'), :class => "btn pull-left", :title => 'Imprimir Gr치fico', :title => 'Imprimir' %>
	</div>

	<div id="graph" style="display:none;">
		<%= button_tag "&times;".html_safe, :class => "close pull-right", :onclick => 'closeGraph()', :title => 'Cerrar Gr치fico' %>
		<div class="page-header">
			<h1>Gr치fico</h1>
		</div>
		<%= render 'graph_procesos'%>
	</div>

	<div id="tabla-contenido">
		<div class="page-header">
			<h1>Datos</h1>
		</div>
		<p><b>Macroproceso: </b><%= @macroproceso.nombre %></p>
		<% if params[:filtro_vista].present? %>
		<% case params[:filtro_vista] %>
		<% when 'anho' %>
		<%= render 'procesos_anho' %>
		<% when 'mes' %>
		<%= render 'procesos_mes' %>
		<% when 'semestre' %>
		<%= render 'procesos_semestre' %>
		<% when 'trimestre' %>
		<%= render 'procesos_trimestre' %>
		<% when 'cuatrimestre' %>
		<%= render 'procesos_cuatrimestre' %>
		<% end %>
		<% else %>
		<%= render 'procesos_anho' %>
		<% end %>
	</div>
</section>