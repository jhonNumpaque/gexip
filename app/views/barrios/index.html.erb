<section>
  <div class="page-header">
    <h1>Barrios <small>Barrios disponibles</small></h1>
  </div>

  <div class="well">
    <%= link_to icon_tag('Agregar', :class => 'icon-plus-sign icon-white'), new_barrio_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <% if @barrios.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
              <th>Nombre</th>
              <th>Ciudad</th>
              <th></th>
      </tr>
      <% @barrios.each do |barrio| %>
        <tr>
                      <td><%= barrio.nombre %></td>
                      <td><%= barrio.ciudad.nombre %></td>
                    <td>
            
            <div class="btn-group">              
              <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_barrio_path(barrio) %></li>
                <li><%= link_to icon_tag('Eliminar', :class => 'icon-trash'), barrio, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <% end %>
    </table> 
  <% else %>
    <p class="alert-message warning">
      Todavía no hay barrios, <%= link_to 'agregar', new_barrio_path %>.
    </p>
  <% end %>

</section>
