<section>
  <div class="page-header">
    <h1>Expedientes <small>disponibles</small></h1>
  </div>

  <div class="well">
    <%= link_to icon_tag('Agregar', :class => 'icon-plus-sign icon-white'), new_expediente_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <div class='well'>
    <h4>Consulta de Expedientes</h4>
    <%= form_tag consulta_desplegar_expediente_path do %>
      <%= label_tag :documento, 'Nro. Expediente' %>
      <%= text_field_tag :documento %>
      <%= submit_tag 'Consultar', :class => 'btn btn-primary' %>
    <% end %>
  </div>

  <ul class="nav nav-tabs" id="myTab">
    <li class="active"><a href="#ccenproceso">Mis Expedientes</a></li>
    <li><a href="#ccnuevo">Bandeja de Entrada</a></li>
    <li><a href="#ccentransito">Bandeja de Salida</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="ccenproceso">
      <h2>Mis Expedientes</h2>
      <% if @expedientes_procesos.present? %>
        <table class="table table-striped table-bordered table-condensed">
          <tr>
            <th>N&uacute;mero</th>
            <th>Procedimiento</th>
            <th>Solicitante</th>
            <th>Descripci&oacute;n</th>
            <th>Fecha de Entrada</th>
            <th>Estado</th>
          </tr>
          <% @expedientes_procesos.each do |expediente| %>
            <tr>
              <td><%= link_to expediente.numero, expediente %></td>
              <td>
                <%= link_to expediente.tarea_expediente_actual.tarea.actividad.procedimiento.nombre, expediente %>
              </td>
              <td><%= expediente.ente.nombre_completo %></td>
              <td><%= truncate(expediente.descripcion, :length => 80) %></td>
              <td><%= l(expediente.created_at, :format => :fechahora ) %></td>
              <td><span class="label label-info"><%= expediente.estado %></span></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <p class="alert-message warning">
          No hay expedientes en esta lista.
        </p>
      <% end %>

    </div>

    <div class="tab-pane" id="ccnuevo">
      <h2>Bandeja de Entrada</h2>

      <% if @expedientes_entradas.present? %>
        <table class="table table-striped table-bordered table-condensed">
          <tr>
            <th>N&uacute;mero</th>
            <th>Procedimiento</th>
            <th>Solicitante</th>
            <th>Descripci&oacute;n</th>
            <th>Fecha de Entrada</th>
            <th>Estado</th>
          </tr>
          <% @expedientes_entradas.each do |expediente| %>
            <tr>
              <td><%= link_to expediente.numero, expediente %></td>
              <td>
                <%= link_to expediente.tarea_expediente_actual.tarea.actividad.procedimiento.nombre, expediente %>
              </td>
              <td><%= expediente.ente.nombre_completo %></td>
              <td><%= truncate(expediente.descripcion, :length => 80) %></td>
              <td><%= l(expediente.created_at, :format => :fechahora ) %></td>
              <td><span class="label label-info"><%= expediente.estado %></span></td>
            </tr>
          <% end %>
        </table>

      <% else %>
        <p class="alert-message warning">
          No hay expedientes en esta lista.
        </p>
      <% end %>
    </div>

    <div class="tab-pane" id="ccentransito">
      <h2>Bandeja de Salida</h2>
      <% if @expedientes_salidas.present? %>
      <table class='table table-condensed table-bordered'>
        <thead>
        <tr>
          <th>N&uacute;mero</th>
          <th>Procedimiento</th>
          <th>Solicitante</th>
          <th>Descripci&oacute;n</th>
          <th>Fecha de Entrada</th>
          <th>Estado</th>
        </tr>
        </thead>
        <tbody>
        <% @expedientes_salidas.each do |expediente| %>
          <tr>
            <td><%= link_to expediente.numero, expediente %></td>
            <td>
              <%= link_to expediente.tarea_expediente_actual.tarea.actividad.procedimiento.nombre, expediente %>
            </td>
            <td><%= expediente.ente.nombre_completo %></td>
            <td><%= truncate(expediente.descripcion, :length => 80) %></td>
            <td><%= l(expediente.created_at, :format => :fechahora ) %></td>
            <td><span class="label label-info"><%= expediente.estado %></span></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <% else %>
      <p class="alert-message warning">
        No hay expedientes en esta lista.
      </p>
      <% end %>
    </div>
    </div>
     
    <script>
    $('#myTab a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
    })

    $(function () {
    $('#myTab a:first').tab('show');
    })
    </script>

</section>
