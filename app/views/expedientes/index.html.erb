<section>
  <div class="page-header">
    <h1>Expedientes <small>Lista de expedientes</small></h1>
  </div>

  <div class="well">
    <%= link_to icon_tag('Agregar', :class => 'icon-plus-sign icon-white'), new_expediente_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <% if @expedientes.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
              <th>Proceso</th>
              <th>Procedimiento</th>
              <th>Tarea actual</th>
              <th>Tarea anterior</th>
              <th>Ente</th>
              <th>Usuario</th>
              <th>Descripcion</th>
              <th>Observacion</th>
              <th>Observacion fin</th>
              <th>Estado</th>
              <th>Usuario ingreso</th>
              <th>Fecha ingreso</th>
              <th>Usuario finalizo</th>
              <th>Fecha finalizo</th>
              <th>Numero</th>
              <th>Copia</th>
              
        <th></th>
      </tr>
      <% @expedientes.each do |expediente| %>
        <tr>
                      <td><%= expediente.proceso_id %></td>
                      <td><%= expediente.procedimiento_id %></td>
                      <td><%= expediente.tarea_actual_id %></td>
                      <td><%= expediente.tarea_anterior_id %></td>
                      <td><%= expediente.ente_id %></td>
                      <td><%= expediente.usuario_id %></td>
                      <td><%= expediente.descripcion %></td>
                      <td><%= expediente.observacion %></td>
                      <td><%= expediente.observacion_fin %></td>
                      <td><%= expediente.estado %></td>
                      <td><%= expediente.usuario_ingreso_id %></td>
                      <td><%= expediente.fecha_ingreso %></td>
                      <td><%= expediente.usuario_finalizo_id %></td>
                      <td><%= expediente.fecha_finalizo %></td>
                      <td><%= expediente.numero %></td>
                      <td><%= expediente.copia %></td>
                    <td>
            
            <div class="btn-group">              
              <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_expediente_path(expediente) %></li>
                <li><%= link_to icon_tag('Eliminar', :class => 'icon-trash'), expediente, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <% end %>
    </table> 
  <% else %>
    <p class="alert-message warning">
      Todavía no hay expedientes, <%= link_to 'agregar', new_expediente_path %>.
    </p>
  <% end %>

</section>
