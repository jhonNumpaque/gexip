  <div class='clearfix'>
    <%= f.label :login, 'Nombre de usuario' %>
    <div class='input'>
      <%= f.text_field :login, :class => 'span6' %>
    </div>
  </div>

  <div class='clearfix'>
    <%= f.label :login, 'Contrase&ntilde;a'.html_safe %>
    <div class='input'>
