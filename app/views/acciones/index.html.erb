<section>
  <div class="page-header">
    <h1>Acciones <small>Lista de acciones</small></h1>
  </div>

  <div class="well">
    <%= link_to 'Agregar', new_accion_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <% if @acciones.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
              <th>Accion</th>
              
        <th></th>
      </tr>
      <% @acciones.each do |accion| %>
        <tr>
                      <td><%= accion.accion %></td>
                    <td>
            
            <div class="btn-group">              
              <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%= link_to content_tag(:i, '', :class => 'icon-pencil') + 'Editar', edit_accion_path(accion) %></li>
                <li><%= link_to content_tag(:i, '', :class => 'icon-trash') + 'Eliminar', accion, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <% end %>
    </table> 
  <% else %>
    <p class="alert-message warning">
      Todavía no hay acciones, <%= link_to 'agregar', new_accion_path %>.
    </p>
  <% end %>

</section>
