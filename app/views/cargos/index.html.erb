<section>
  <div class="page-header">
    <h1>Cargos <small>Lista de cargos</small></h1>
  </div>

  <div class="well">
    <%= link_to 'Agregar', new_cargo_path, :class => 'btn btn-primary' %>
  </div>
  <br />

  <% if @cargos.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
              <th>Nombre</th>
              
        <th></th>
      </tr>
      <% @cargos.each do |cargo| %>
        <tr>
                      <td><%= cargo.nombre %></td>
                    <td>
            
            <div class="btn-group">              
              <%= link_to 'Acciones <b class="caret"></b>'.html_safe, '#', :class => 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul id="menu1" class="dropdown-menu">
                <li><%= link_to icon_tag('Editar', :class => 'icon-pencil'), edit_cargo_path(cargo) %></li>
                <li><%= link_to icon_tag('Eliminar', :class => 'icon-trash'), cargo, confirm: '¿Está seguro de eliminar este registro?. Esta acción no se puede deshacer', method: :delete %></li>

              </ul>              
            </div>
          </td>
        </tr>
      <% end %>
    </table> 
  <% else %>
    <p class="alert-message warning">
      Todavía no hay cargos, <%= link_to 'agregar', new_cargo_path %>.
    </p>
  <% end %>

</section>
