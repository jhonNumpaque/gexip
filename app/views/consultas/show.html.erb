<section>  
  <div class="well">
    <%= link_to icon_tag('Consultar Expediente', :class => 'icon-arrow-left icon-white'), consultas_path, :class => 'btn primary' %>
  </div>

  <div class="page-header">
    <h1>Expediente</h1>
  </div>


  <p>
    <b>Descripcion:</b>
    <%= @expediente.descripcion %>
  </p>

  <p>
    <b>Observacion:</b>
    <%= @expediente.observacion %>
  </p>

  <p>
    <b>Observacion Final:</b>
    <%= @expediente.observacion_fin %>
  </p>

  <p>
    <b>Estado:</b>
    <%= @expediente.estado %>
  </p>

  <p>
    <b>Fecha Creacion:</b>
    <%= @expediente.created_at %>
  </p>
  <fieldset>
    <legend>Historial del Expediente</legend>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Tarea</th>
          <th>Fecha Inicio</th>
          <th>Fecha Fin</th>
          <th>Actividad</th>
          <th>Procedimiento</th>
          <th>Dependencia</th>
        </tr>
      </thead>
      <tbody>
        <% @tareas_expedientes.each do |f| %>
        <tr>
          <td><%= f.tarea.nombre %></td>
          <td><%= f.fecha_inicio %></td>
          <td><%= f.fecha_fin %></td>
          <td><%= f.tarea.actividad.nombre %></td>
          <td><%= f.tarea.actividad.procedimiento.nombre %></td>
          <td><%= f.tarea.estructura.nombre %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </fieldset>

</section>
