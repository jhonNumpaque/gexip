<%= form_tag controller_name, :class => 'form-inline' ,:method => :get do %>
  <fieldset>
    <legend>Buscador</legend>

    <%= label_tag 'Nombre:' %>
    <%= text_field_tag 'nombre', params[:nombre] %>
    
    <%= label_tag 'Objetivo:' %>
    <%= text_field_tag 'objetivo', params[:objetivo] %>

    <%= label_tag 'Definicion:' %>
    <%= text_field_tag 'definicion', params[:definicion] %>
    <hr />
    <%= label_tag 'Subproceso' %> 
    <%= select_tag "subproceso", options_from_collection_for_select( Subproceso.all, "id", "nombre" ), :prompt => "-- Seleccionar --" %> 

    <%= submit_tag 'Buscar', :class => 'btn btn-primary' %>

  </fieldset>
<% end %>
